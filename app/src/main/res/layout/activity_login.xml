<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#31638D"
        android:gravity="center"
        android:padding="20dp"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="285dp"
        android:layout_height="230dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/et_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <Button
        android:id="@+id/btn_Login"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:text="로그인"
        android:backgroundTint="#747474"
        app:layout_constraintBottom_toTopOf="@+id/btn_Regist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_FindId"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:layout_marginBottom="44dp"
        android:stateListAnimator="@null"
        android:text="아이디 찾기"
        android:backgroundTint="#31638D"
        android:textColor="@color/white"
        android:textSize="5.7pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_FindPw"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_ID"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="364dp"
        android:ems="10"
        android:hint="이메일 아이디"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/et_PW"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btn_FindPw"
        android:layout_width="122dp"
        android:layout_height="45dp"
        android:layout_marginBottom="44dp"
        android:stateListAnimator="@null"
        android:text="비밀번호 찾기"
        android:textColor="@color/white"
        android:backgroundTint="#31638D"
        android:textSize="5.8pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.737"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_PW"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="412dp"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Regist"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_marginBottom="108dp"
        android:text="회원가입"
        android:backgroundTint="#D5D5D5"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>